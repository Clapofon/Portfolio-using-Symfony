{% extends('base.html.twig') %}

{% block title %}{{ projectData.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="../css/image-viewer.css" />
{% endblock %}

{% block videoPath %}../../video/projects/{{ projectData.slug }}/{{ projectData.video }}{% endblock %}

{% block main %}

    <div class="lp-content flex" style="align-items: center;">
        <div style="width: 70%;">
            <h1 class="project-header">{{ projectData.name }}</h1>
            <div class="button-container">
                <button class="hyperlink-button return-button">&#60; back to main page</button>
                <input type="hidden" value="/">
            </div>
        </div>
    </div>
    
    <div class="gallery flex">

        {% for render in renderData %}
            <div class="gallery-item">
                <figure class="flex">
                    <img src="../images/renders/{{ projectData.name }}/{{render.image }}" alt="{{ render.image }}">
                </figure>
                <figcaption>
                    {{ render.description }}
                </figcaption>
                <div class="overlay flex">
                    <i class="icon-search"></i>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}

{% block javascriptsBody %}
    <script src="/js/returnButton.js" type="text/javascript"></script>
    <script src="/js/gallery.js" type="text/javascript"></script>
    <script src="/js/hyperlinkButton.js" type="text/javascript"></script>
{% endblock %}